#include "Base.xcconfig"
// We need per-arch deployment targets because of the 64-bit architectures
MACOSX_DEPLOYMENT_TARGET_ppc = 10.4;
MACOSX_DEPLOYMENT_TARGET_i386 = 10.4;
MACOSX_DEPLOYMENT_TARGET_ppc64 = 10.5;
MACOSX_DEPLOYMENT_TARGET_x86_64 = 10.5;
// We need to use the 10.4u SDK on Tiger systems
SDKROOT = $(SDKROOT_$(MAC_OS_X_VERSION_MAJOR));
SDKROOT_ = /Developer/SDKs/MacOSX10.4u.sdk;
SDKROOT_1040 = $(SDKROOT_);
SDKROOT_1050 = /Developer/SDKs/MacOSX10.5.sdk;
